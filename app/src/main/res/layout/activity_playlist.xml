<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.PlaylistActivity"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/backCard"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            android:shadowRadius="@dimen/_20sdp"
            android:shadowColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:layout_marginLeft="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/left"
                android:background="@drawable/round_bg"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/searchCard"
            app:layout_constraintLeft_toRightOf="@id/backCard"
            app:layout_constraintTop_toTopOf="@id/backCard"
            app:layout_constraintBottom_toBottomOf="@id/backCard"
            android:text="PlayList"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:shadowRadius="@dimen/_20sdp"
            android:shadowColor="@android:color/black"
            app:cardCornerRadius="@dimen/_30sdp"
            android:backgroundTint="@android:color/white"
            android:layout_marginRight="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/search"
                android:background="@drawable/round_bg"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/addCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:backgroundTint="@color/lightBlue"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backCard"

            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/musicCons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:id="@+id/musicImgCard"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_40sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardBackgroundColor="@color/white"
                    android:foregroundGravity="center"
                    android:elevation="@dimen/_40sdp">

                    <ImageView
                        android:id="@+id/musicImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/plus1"
                        android:layout_margin="@dimen/_10sdp"
                        android:adjustViewBounds="true" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/musicText"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_18sdp"
                    app:layout_constraintLeft_toRightOf="@+id/musicImgCard"
                    app:layout_constraintBottom_toBottomOf="@id/musicImgCard"
                    app:layout_constraintTop_toTopOf="@id/musicImgCard"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="create new"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />




                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guid50Hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/playlistRec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/addCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_8sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>